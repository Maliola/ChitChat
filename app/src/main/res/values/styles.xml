<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="nav_title_background">@color/gray_light</item>
        <item name="nav_title_text_color">@color/text5</item>
        <item name="nav_title_left_text_color">@color/text5</item>
        <item name="nav_title_right_text_color">@color/text5</item>
        <item name="nav_title_bottom_line_color">@color/line_color</item>
    </style>
    <style name="main_bottom_tab_radio_button">
        <item name="android:drawablePadding">-8dp</item>
        <item name="android:background">@null</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_marginTop">0dip</item>
        <item name="android:layout_height">45dip</item>
        <item name="android:layout_marginLeft">-3dip</item>
        <item name="android:layout_marginRight">-3dip</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:focusable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@drawable/bottom_main_button_font_style</item>
    </style>
    <style name="login_button_sytyle">
        <item name="android:background">@null</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_marginTop">0dip</item>
        <item name="android:layout_height">50dip</item>
        <item name="android:button">@null</item>
        <item name="android:focusable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@drawable/bottom_main_button_font_style</item>
    </style>
    <style name="edit_text_style">
        <item name="android:background">@null</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dip</item>
        <item name="android:textSize">@dimen/text.size.normal</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:longClickable">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColorHint">@color/line_color_2</item>
    </style>
</resources>
